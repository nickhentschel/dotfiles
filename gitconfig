	email = nhentschel@wayfair.com
[github]
    user = nickhentschel
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta
    plain = white bold
    old = red bold
    new = green bold
    commit = yellow bold
    func = green dim
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
    helper = cache
[push]
	default = current
[core]
    editor = vim
	autocrlf = false
[alias]
    st = status
    co = checkout
    di = diff
    aa = add --all
    br = branch
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	logall = log --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
[url "https://github.com"]
    insteadOf = git://github.com
[pull]
	rebase = true
[fetch]
	prune = true
[log]
	decorate = short
[http]
	sslverify = false
	sslCAPath = /etc/pki/tls/certs
